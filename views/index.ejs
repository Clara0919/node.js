<%- include('./includes/header') %>
    <link rel="stylesheet" href="/styles/main.css">
    </head>

    <body>
        <h1>
            <%= pageTitle %>
        </h1>
        <% if (products.length> 0) { %>
            <!-- TODO: 使用迴圈跑出 products 資料 -->
            <% products.forEach((product,productIndex)=> { %>
                <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                <h3>
                    <%= product.title %>
                </h3>
                <p>
                    <%= productIndex %>
                </p>
                <% }) %>
                    <% } else { %>
                        尚無商品
                        <% } %>
    </body>

    </html>